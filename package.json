{
  "name": "web2md-mcp",
  "version": "0.0.2",
  "description": "MCP server that converts web pages to clean Markdown",
  "bin": {
    "web2md-mcp": "./bin/cli.js"
  },
  "scripts": {
    "build": "./gradlew bootJar && find build/libs -name '*.jar' ! -name '*-plain.jar' -exec cp {} bin/web2md.jar \\;",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "bin/"
  ],
  "keywords": [
    "mcp",
    "markdown",
    "web",
    "html-to-markdown",
    "model-context-protocol",
    "claude",
    "ai"
  ],
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevstevie/web2md"
  },
  "engines": {
    "node": ">=16"
  }
}
